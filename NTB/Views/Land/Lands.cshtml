@model NTB.Models.Pagination
@{
    var lands = Model.Lands;
    
    ViewBag.Title = "Lands";
    Layout = "~/Views/Shared/_masterpage.cshtml";
}
<script>
    function NewLand() {
        document.location.href = '/Land/Create';
    }
</script>
<h2>Lands</h2>
<div class="row">
    <div class="col-sm-12">
        <button onclick="NewLand();" class="btn-lg btn btn-success">New Land</button>
        <br />
    </div>
</div>
<div class="box-body">
    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
        <div class="row">
            <div class="col-sm-6">
                <div class="dataTables_length" id="example1_length">
                    <label>Show 
                        <select name="example1_length" aria-controls="example1" class="form-control input-sm">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> entries
                    </label>
                </div>
            </div>
            <div class="col-sm-6">
                <div id="example1_filter" class="dataTables_filter">
                    <label>Search:<input class="form-control input-sm" placeholder="" aria-controls="example1" type="search"></label>
                </div>
            </div>
        </div>
        @if (lands == null | lands.Count == 0)
        {
            <div>No Lands Found</div>
        }
        else
        {
        <div class="row">
            <div class="col-sm-12">
                <table id="example1" class="table table-bordered table-striped" role="grid">
                    <thead>
                        <tr role="row">
                            <th tabindex="0" rowspan="1" colspan="1">&nbsp;</th>
                            <th tabindex="0" rowspan="1" colspan="1">Location</th>
                            <th tabindex="0" rowspan="1" colspan="1">Address</th>
                            <th tabindex="0" rowspan="1" colspan="1">Land Marks</th>
                            <th tabindex="0" rowspan="1" colspan="1">Area (Sq.Ft)</th>
                            <th tabindex="0" rowspan="1" colspan="1">Purchased Date</th>
                            <th tabindex="0" rowspan="1" colspan="1">Cost</th>
                            <th tabindex="0" rowspan="1" colspan="1">Current Value</th>
                            <th tabindex="0" rowspan="1" colspan="1">Permit Date</th>
                            @*<th tabindex="0" rowspan="1" style="text-align:center;" colspan="1">Land Status</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in lands)
                        {
                        <tr role="row" class="odd">
                            <td><input type="checkbox"/></td>
                            <td>@item.Location</td>
                            <td>@item.Address</td>
                            <td>@item.LandMarks</td>
                            <td>@item.AreaSize</td>
                            <td>@item.PurchasedDate</td>
                            <td>@item.PurchasedCost</td>
                            <td>@item.PresentCost</td>
                            <td>@item.BuildingPermitDate</td>
                            @*<td>@item.LandStatus.Name</td>*@
                            <td>
                                <a href="@Url.Action("Delete", new { Id = item.Id })"><span class="glyphicon glyphicon-remove">&nbsp;</span></a>&nbsp;&nbsp;&nbsp;
                                <a href="@Url.Action("Edit", new { Id = item.Id})"><span class="glyphicon glyphicon-edit">&nbsp;</span></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th rowspan="1" colspan="1">&nbsp;</th>
                            <th rowspan="1" colspan="1">Location</th>
                            <th rowspan="1" colspan="1">Address</th>
                            <th rowspan="1" colspan="1">Land Marks</th>
                            <th rowspan="1" colspan="1">Area (Sq.Ft)</th>
                            <th rowspan="1" colspan="1">Purchased Date</th>
                            <th rowspan="1" colspan="1">Cost</th>
                            <th rowspan="1" colspan="1">Current Value</th>
                            <th rowspan="1" colspan="1">Permit Date</th>
                            @*<th rowspan="1" colspan="1">land Status</th>*@
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        }    
