@model IEnumerable<NTB.Room>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_masterpage.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-8">
        <table class="table table-striped">
            <tr>
                @*<th>
                    Building Name
                </th>*@
                <th>
                    Floor #
                    @*@Html.DisplayNameFor(model => model.FloorId)*@
                </th>
                <th>
                    Room Type
                    @*@Html.DisplayNameFor(model => model.RoomTypeId)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaSqFt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Floor.FloorNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaSqFt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { Id = item.Id })"><span class="glyphicon glyphicon-edit" style="font-size:18px;"></span></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        <a href="@Url.Action("Details", new { Id = item.Id })"><span class="glyphicon glyphicon-list-alt" style="font-size:18px;"></span></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        <a href="@Url.Action("Delete", new { Id = item.Id })"><span class="glyphicon glyphicon-remove-circle" style="font-size:18px;"></span></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        <a href="@Url.Action("Create", new { Id = item.Id })"><span class="glyphicon glyphicon-shopping-cart" style="font-size:18px;"></span></a>
                    </td>
                </tr>
            }
            <tr>
                <th>
                    Floor #
                    @*@Html.DisplayNameFor(model => model.FloorId)*@
                </th>
                <th>
                    Room Type
                    @*@Html.DisplayNameFor(model => model.RoomTypeId)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaSqFt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th></th>
            </tr>
        </table>
    </div>
</div>

