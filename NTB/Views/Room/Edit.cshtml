@model NTB.Room

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_masterpage.cshtml";
    var type = ViewBag.Type as List<NTB.RoomType>;
    var floor = ViewBag.Floor as List<NTB.Floor>;
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Room</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.AreaSqFt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AreaSqFt)
            @Html.ValidationMessageFor(model => model.AreaSqFt)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cost)
            @Html.ValidationMessageFor(model => model.Cost)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FloorId)
        </div>
        <select required name="FloorId">
            @foreach (var item in floor)
            {
                <option value="@item.Id">@item.FloorNo</option>
            }
        </select>

        @*<div class="editor-field">
            @Html.EditorFor(model => model.Floor.FloorNo)
            @Html.ValidationMessageFor(model => model.FloorId)
        </div>*@

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomTypeId)
        </div>
        <select required name="RoomTypeId">
            @foreach (var item in type)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        @*<div class="editor-field">
            @Html.EditorFor(model => model.RoomType.Name)
            @Html.ValidationMessageFor(model => model.RoomTypeId)
        </div>*@

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
